
{% extends 'base.html.twig' %}

{% block title %}Ver Titulos{% endblock %}

{% block body %}
{{parent()}}

<table class="table table-borderless">
    <thead>
            <tr style = "background-color: #0F9FA8;">
            <th>Nro</th>
            <th>Nombre Titulos</th>
            <th style="text-align: center;">Editar</th>
            <th style="text-align: center;">Eliminar</th>
        </tr>
    </thead>
    <tbody id="myTable">
        {% for titulo in titulos %}
        <tr>
            <th>{{ loop.index }}</th>
            <td>{{titulo.nombreTitulo}}</td>
            <td style="text-align: center;"><a class ="btn" href="{{path('modificarTitulos', {'id': titulo.id})}}" ><i class="far fa-edit text-success" style = "font-size: 20px;"></i></a></td>
            <td style="text-align: center;"><a class = "btn" onclick="DeleteFunction({{titulo.id}})"><i class=" fas fa-trash text-danger"   style = "font-size: 20px"></i></a></td>
        </tr>
        {% endfor %}
    </tbody>
</table> 
<div class = "text-center container mt-5">
    <a class = "btn btn-outline-secondary" href = "{{path('datosAcademicos')}}">Volver</a> 
    <a class = "btn btn-outline-secondary" href = "{{path('altaTitulos')}}">Crear Otro</a> 
<div>
<script src = "{{asset('js/deleteTitulos.js')}}"></script>
{% endblock %}

