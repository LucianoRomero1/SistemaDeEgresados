<!DOCTYPE html>
<html >
    <head>
        <meta charset="UTF-8">
	    <meta name="viewport" content="width=device-width, initial-scale=1">
      

        <title>{% block title %}{% endblock %}</title>
        {% block stylesheets %}
            <link rel="icon" href="{{ asset("img/iconoUnraf.png") }}">
            <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
            <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
            <link href = "{{asset("css/estilos.css")}}" rel = "stylesheet" type = "text/css">
        {% endblock %}
    </head>
    <body>
        {% block body %}  
            {% if is_granted('ROLE_SUPERADMIN') or is_granted('ROLE_ADMIN') or is_granted('ROLE_USER') %}
            <nav class="navbar navbar-expand-md navbar-light bg-light">
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".dual-collapse2">
                <span class="navbar-toggler-icon"></span> 
            </button>  
            {% if app.request.pathinfo == "/user/menuPrincipal" %}
                    <a class="nav-link" href="{{path('menuPrincipal')}}"><img src = "{{asset('svg/home.svg')}}" alt="Home" width="32"></a>
                {% else %}
                    <a class="nav-link" href="{{path('menuPrincipal')}}"><img src = "{{asset('svg/home-blanco.svg')}}"alt="Home" width="32"></a>
            {% endif %}
            <div class="collapse navbar-collapse dual-collapse2 mx-auto order-3 " id="navbarSupportedContent">
                <ul class="navbar-nav mr-auto " style = "text-decoration: none;">
                    <li class="nav-item dropdown m-2" id= "navBarMargin">
                        {% if app.request.pathinfo == "/user/verEgresados" or  "/altaDatos" in app.request.pathinfo or "/altaArchivos" in app.request.pathinfo or "/modificarDatos" in app.request.pathinfo  or "/modificarArchivos" in app.request.pathinfo %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <b id = "seleccionado">Egresados</b>
                        </a>
                        {% else %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Egresados
                        </a>
                        {% endif %}
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a id = "navHover" class="dropdown-item" href="{{path('altaDatosPersonales')}}">Alta egresados</a>
                            <div class="dropdown-divider"></div>
                            <a id = "navHover" class="dropdown-item" href="{{path('verEgresados')}}">Ver/Modificar egresados</a>
                        </div>
                    </li>
                    {% if is_granted('ROLE_ADMIN')  %}
                    <li class="nav-item dropdown m-2" id= "navBarMargin">
                        {% if app.request.pathinfo == "/admin/datosAcademicos" or app.request.pathinfo == "/admin/verCarreras"  or app.request.pathinfo == "/admin/altaCarreras" or app.request.pathinfo == "/admin/verTitulos" or app.request.pathinfo == "/admin/verDocumentos"  or app.request.pathinfo == "/admin/altaDocumentos" or app.request.pathinfo == "/admin/altaTitulos" %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <b id = "seleccionado">Datos Académicos</b>
                        </a>
                        {% else %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Datos Académicos
                        </a>
                        {% endif %}
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a id = "navHover" class="dropdown-item" href="{{path('datosAcademicos')}}">Modificar datos académicos</a>
                        </div>
                    </li>
                    {% endif %}
                    {% if is_granted('ROLE_SUPERADMIN') %}
                    <li class="nav-item dropdown m-2" id= "navBarMargin">
                        {% if app.request.pathinfo == "/superadmin/roles"%}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <b id = "seleccionado">Roles usuarios</b>
                        </a>
                        {% else %}
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Roles usuarios
                        </a>
                        {% endif %}
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="{{path('roles')}}">Modificar roles</a>
                        </div>
                    </li>
                    {% endif %}
                </ul>
            </div>  
            <div class="navbar-collapse collapse w-100 order-3 dual-collapse2">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item">
                        <a class = "nav-link" href = "{{path('app_logout')}}"><i class="fas fa-sign-out-alt" style = "font-size: 30px; color:#0F9FA8;"></i></a>
                    </li>
                </ul>
            </div>
               
        </nav>
            {% endif %}
        <div class="container">
            {% for message in app.flashes('correcto') %}
                <div class="alert alert-success alert-dismissible mt-4 mb-3">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('error') %}
                <div class="alert alert-danger alert-dismissible mt-4 mb-3">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}
            {% for message in app.flashes('warning') %}
                <div class="alert alert-warning alert-dismissible mt-4 mb-3">
                    <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
                    {{ message }}
                </div>
            {% endfor %}
        </div> 
        {% endblock %}
        {% block javascripts %}
        <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
        <script type="text/javascript" src="//cdnjs.cloudflare.com/ajax/libs/moment.js/2.15.2/moment.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
        <script src="https://use.fontawesome.com/releases/v5.15.2/js/all.js" data-search-pseudo-elements></script>
        <script src= "{{asset('js/accionesQuery.js')}}"></script>
        {% endblock %}
    </body>

</html>
